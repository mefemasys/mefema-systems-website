# .htaccess
RewriteEngine On
RewriteBase /

# Redireciona requisições para arquivos PHP (sem extensão na URL)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(index|sobre|servicos|empresa|contacto|legal)/?$ $1.php [L]

# Redireciona raiz para index.php
RewriteRule ^$ index.php [L]